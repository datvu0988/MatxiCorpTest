@model matxicorp.Models.DeleteEmployeeViewModel

@{
    ViewData["Title"] = "Delete";
    var FullName = $"{Model.LastName} {Model.FirstName}";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.Label(FullName)
        </dd>
        <dt class="col-sm-2">
            Employee Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeCode)
        </dd>
        <dt class="col-sm-2">
            Level
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LevelName)
        </dd>
        @if (!string.IsNullOrEmpty(Model.TeamLeaderName))
        {
            <dt class="col-sm-2">
                Team Leader
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TeamLeaderName)
            </dd>
        }
        @if (!string.IsNullOrEmpty(Model.DirectManagerName))
        {
            <dt class="col-sm-2">
                Direct Manager
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DirectManagerName)
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
